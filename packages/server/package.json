    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.2",
    "@ai-sdk/deepseek": "^2.0.2",
    "@ai-sdk/openai": "^3.0.2",
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/stream": "^1.1.0",
    "@neovate/code": "^0.22.4",
    "@prisma/client": "6.19.1",
    "ai": "^6.0.6",
    "elysia": "^1.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "prisma": "6.19.1",
    "typescript": "~5.7.2"
  }
}
