generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  passwordHash  String?
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts      Account[]
  sessions      Session[]
  agents        Agent[]
  conversations Conversation[]
  agentSessions AgentSession[]

  @@map("user")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refreshToken      String? @db.Text
  accessToken       String? @db.Text
  expiresAt         Int?
  tokenType         String?
  scope             String?
  idToken           String? @db.Text
  sessionState      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationToken")
}

model Agent {
  id            String      @id @default(cuid()) /// Unique identifier for the agent
  name          String /// Name of the agent
  description   String? /// Description of the agent's purpose
  model         String      @default("claude-3-sonnet") /// AI model used by the agent
  systemPrompt  String? /// System prompt that defines the agent's behavior
  status        AgentStatus @default(IDLE) /// Current status of the agent
  config        Json? /// Additional configuration for the agent
  createdAt     DateTime    @default(now()) /// Timestamp when the agent was created
  updatedAt     DateTime    @updatedAt /// Timestamp when the agent was last updated

  userId        String
  user          User          @relation(fields: [userId], references: [id])
  conversations Conversation[]

  @@map("agent")
}

model Conversation {
  id        String   @id @default(cuid()) /// Unique identifier for the conversation
  title     String? /// Title of the conversation
  createdAt DateTime @default(now()) /// Timestamp when the conversation was created
  updatedAt DateTime @updatedAt /// Timestamp when the conversation was last updated

  userId   String
  user     User     @relation(fields: [userId], references: [id])
  agentId  String?
  agent    Agent?   @relation(fields: [agentId], references: [id])
  messages Message[]

  @@map("conversation")
}

model Message {
  id        String      @id @default(cuid()) /// Unique identifier for the message
  role      MessageRole /// Role of the message sender (user, assistant, or system)
  content   String /// Content of the message
  metadata  Json? /// Additional metadata for the message
  createdAt DateTime    @default(now()) /// Timestamp when the message was created

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("message")
}

enum AgentStatus {
  IDLE /// Agent is idle and available
  ACTIVE /// Agent is currently processing
  ERROR /// Agent has encountered an error
}

enum MessageRole {
  USER /// Message from the user
  ASSISTANT /// Message from the AI assistant
  SYSTEM /// System message
}

model AgentSession {
  id               String   @id @default(cuid()) /// Unique identifier for the agent session
  sessionId        String   @unique /// External session ID provided by the client
  userPrompt       String /// User's question or prompt
  promptTokens     Int /// Number of input tokens used
  completionTokens Int /// Number of output tokens generated
  totalTokens      Int /// Total number of tokens used
  success          Boolean /// Whether the session completed successfully
  duration         Int /// Duration of the session in milliseconds
  turnsCount       Int /// Number of conversation turns
  toolCallsCount   Int /// Number of tool calls made during the session
  model            String /// AI model used in the session
  languages        String[] /// Programming languages used in the session
  timestamp        DateTime /// Client-side timestamp
  createdAt        DateTime @default(now()) /// Timestamp when the session was created

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([timestamp])
  @@map("agentSession")
}
